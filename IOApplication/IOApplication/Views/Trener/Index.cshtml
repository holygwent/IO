@model IEnumerable<IOApplication.Models.Trener>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Trenerów</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<div>
    @using (Html.BeginForm("Index", "Trener", FormMethod.Get))
    {
        @Html.TextBox("searching")
        <input type="submit" value="szukaj" />
        <button>@Html.ActionLink("Wyczyść", "Index")</button>

    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Zajecia.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Zajecia.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdTrener }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdTrener }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdTrener })
        </td>
    </tr>
}

</table>
