@model IEnumerable<IOApplication.Models.Zajecia>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Zajęć</h2>

<p>
    @Html.ActionLink("Dodaj Zajęcia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Godzina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Godzina)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdZajecia }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdZajecia }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdZajecia })
        </td>
    </tr>
}

</table>
